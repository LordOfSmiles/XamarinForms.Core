<?xml version="1.0"
      encoding="utf-8"?>
<StackLayout xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:effects="http://xamarin.com/schemas/2020/toolkit"
             x:Class="XamarinForms.Core.Controls.TouchableStackLayout"
             BackgroundColor="{Binding Source={RelativeSource Mode=Self}, Path=NormalColor}"
             effects:TouchEffect.NativeAnimation="{OnPlatform Android=true}"
             effects:TouchEffect.PulseCount="{OnPlatform Android=1}"
             effects:TouchEffect.NativeAnimationColor="{Binding Source={RelativeSource Mode=Self}, Path=PressedColor}"
             effects:TouchEffect.PressedBackgroundColor="{Binding Source={RelativeSource Mode=Self}, Path=PressedColor}"
             effects:TouchEffect.NormalBackgroundColor="{Binding Source={RelativeSource Mode=Self}, Path=NormalColor}" />