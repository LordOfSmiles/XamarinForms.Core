<?xml version="1.0"
      encoding="utf-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:BabyDream.Infrastructure.Controls;assembly=XamarinForms.Core"
             x:Class="BabyDream.Infrastructure.Controls.BottomGradientView"
             HeightRequest="8">
    <ContentView.Background>
        <LinearGradientBrush StartPoint="0,0"
                             EndPoint="0,1">
            <LinearGradientBrush.GradientStops>
                <GradientStop Offset="0"
                              Color="{Binding Source={RelativeSource Mode=FindAncestor, AncestorType={x:Type controls:BottomGradientView}}, Path=StartColor}" />
                <GradientStop Offset="1"
                              Color="{Binding Source={RelativeSource Mode=FindAncestor, AncestorType={x:Type controls:BottomGradientView}}, Path=EndColor}" />
            </LinearGradientBrush.GradientStops>
        </LinearGradientBrush>
    </ContentView.Background>
</ContentView>